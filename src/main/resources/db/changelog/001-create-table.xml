<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        logicalFilePath="db/changelog/changelog.xml">
        <changeSet id="001-create-table" author="Memartyes">
            <createTable tableName="coworking_app.users-liquibase">
                <column name="id" type="bigint" defaultValueSequenceNext="user_id_seq">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="name" type="varchar(255)">
                    <constraints nullable="false"/>
                </column>
                <column name="email" type="varchar(255)">
                    <constraints nullable="false" unique="true"/>
                </column>
                <column name="password" type="varchar(255)">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <createTable tableName="coworking_app.workspaces-liquibase">
                <column name="id" type="bigint" defaultValueSequenceNext="workspace_id_seq">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="name" type="varchar(255)">
                    <constraints nullable="false"/>
                </column>
                <column name="bookedBy" type="varchar(255)">
                    <constraints nullable="false"/>
                </column>
                <column name="bookingTime" type="time">
                    <constraints nullable="true"/>
                </column>
            </createTable>

            <createTable tableName="coworking_app.conference_rooms-liquibase">
                <column name="id" type="bigint" defaultValueSequenceNext="conference_room_id_seq">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="name" type="varchar(255)">
                    <constraints nullable="false"/>
                </column>
                <column name="capacity" type="int">
                    <constraints nullable="false"/>
                </column>
            </createTable>
        </changeSet>
</databaseChangeLog>